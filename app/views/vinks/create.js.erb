week_nr = $('#activity_<%= @activity.id %>').parent().attr('id');

$('.activity_form').hide();
$('#activity_button').show();

day_nr = <%=@activity.day%>;
<% if @activity.unbillable_id.blank? -%>
  $("td#" + day_nr + ".activities").append('<%= j render("activities/activity", timesheet: @activity.timesheet, activity_type: "billable", activity: @activity) %>');
<% else -%>
  $("td#" + day_nr + ".activities").append('<%= j render("activities/activity", timesheet: @activity.timesheet, activity_type: "unbillable", activity: @activity) %>');
<% end %>

registered = $(".hour_status .registered").text();
registered = parseFloat(registered) + parseFloat(<%= @activity.hours %>);
$(".hour_status .registered").text(registered);

registered = $(".hours > div#" + day_nr).text();
registered = parseFloat(registered) + parseFloat(<%= @activity.hours %>);
$(".hours > div#" + day_nr).text(registered + ".0");

registered = $(".week_total > ." + week_nr).text();
registered = parseFloat(registered) + parseFloat(<%= @activity.hours %>);
$(".week_total > ." + week_nr).text(registered + ".0");
