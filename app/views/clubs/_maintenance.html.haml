- if can? :maintain, Club
  .row
    .small-12.large-10.large-centered.columns
      %table
        %thead
          %tr
            %th= I18n.t(".clubs.form.name")
            %th= I18n.t(".clubs.form.league_id")
            %th= I18n.t(".clubs.form.country_id")
            %th
        %tbody#clubs
          = render "clubs", clubs: @clubs

  .row
    .small-12.large-10.large-centered.columns
      = will_paginate @clubs unless @clubs.blank?
