.row
  .small-8.small-centered.columns
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %h1= I18n.t(".devise.sessions.sign_up")
      = devise_error_messages!
      = f.text_field :first_name, placeholder: I18n.t('.users.form.first_name'), autofocus: true
      = f.text_field :last_name, placeholder: I18n.t('.users.form.last_name')
      = f.text_field :screen_name, placeholder: I18n.t('.users.form.screen_name')
      = f.text_field :location, placeholder: I18n.t('.users.form.location')
      = f.text_field :email, placeholder: I18n.t('.users.form.email')
      = f.password_field :password, placeholder: I18n.t('.users.form.password')
      = f.password_field :password_confirmation, placeholder: I18n.t('.users.form.password_confirmation')
      = f.submit(class: 'button', value: I18n.t(".devise.sessions.sign_up"))
      = render "devise/shared/links"
