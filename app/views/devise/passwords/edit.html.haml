.row
  .offset3.span6
    #clearance.signin_container
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        %h1.form-signin-heading= I18n.t(".devise.sessions.change_title")
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        = f.password_field :password, class: "input-block-level", placeholder: I18n.t('.devise.sessions.password'), autofocus: true
        = f.password_field :password_confirmation, class: "input-block-level", placeholder: I18n.t('.devise.sessions.password_confirm')
        = f.submit(class: 'btn', value: I18n.t(".devise.sessions.change_title"))
        = render "devise/shared/links"