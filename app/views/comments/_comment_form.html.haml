.add_comment
  %h3= I18n.t('.comments.new_title')
  = form_for [@commentable, @comment] do |f|
    = render "layouts/error_messages", target: @comment
    = f.hidden_field :user_id, value: current_user.id
    .row
      .small-12.columns
        = f.text_field :content, length: 140, maxlength: 140
    .row
      .small-12.columns
        = f.submit(class: 'button', value: I18n.t('.general.save'))
