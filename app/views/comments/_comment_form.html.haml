%h1= I18n.t('.comments.new_title')
= form_for [@commentable, @comment] do |f|
  = f.hiiden_field :user_id, value: current_user.id
  = render "layouts/error_messages", target: @comment
  .row
    .small-12.columns
      = f.text_area :content, rows: 8
  .row
    .small-12.columns
      = f.submit(class: 'button', value: I18n.t('.general.save'))
